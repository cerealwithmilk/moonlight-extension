{
    "manifest_version": 3,

    "name": "Moonlight",
    "description": "Allows to join ROBLOX games from the website with the Microsoft Store client",

    "version": "4.0",

    "icons": {
        "16": "imgs/icon16.png",
        "48": "imgs/icon48.png",
        "128": "imgs/icon128.png"
    },

    "host_permissions": [
		"*://*.rbxcdn.com/*",
        "*://*.roblox.com/*"
    ],

    "content_scripts": [{
        "js": ["main.js"],
        "matches": ["https://www.roblox.com/*", "https://web.roblox.com/*"]
    }]
}
